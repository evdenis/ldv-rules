@include "../ldv.aspect"

before: file("$this")
{
int ldv_interrupts_disable_nesting = 0;
void ldv_check( void );
}

new: file(LDV_COMMON_MODEL)
{

#include <ldv.h>


void
ldv_check( void )
{
   ldv_assert( ldv_interrupts_disable_nesting == 0 );
}

void
ldv_check_final_state( void )
{
   ldv_check();
}

}

around: define( local_irq_disable() )
{
   ++ldv_interrupts_disable_nesting
}

around: define( local_irq_enable() )
{
   --ldv_interrupts_disable_nesting
}

around: define( local_irq_save(flags) )
{
   ++ldv_interrupts_disable_nesting
}

around: define( local_irq_restore(flags) )
{
   --ldv_interrupts_disable_nesting
}


around: define( might_sleep() )
{
   ldv_check()
}

