@include "../ldv.aspect"

before: file("$this")
{

extern void ldv_check( void );
}

around: define(on_each_cpu(func,info,wait))
{
   ({ ldv_check(); 0; })
}

after: call(int on_each_cpu(..))
{
   ldv_check();
}

new: file(LDV_COMMON_MODEL)
{

#include <ldv.h>

extern int LDV_IN_INTERRUPT;

void
ldv_check( void )
{
   ldv_assert( LDV_IN_INTERRUPT == 1 );
}

}

